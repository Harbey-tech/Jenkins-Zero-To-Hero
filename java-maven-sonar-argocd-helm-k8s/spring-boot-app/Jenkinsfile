pipeline {
  agent {
    docker {
      image 'maven:3.9.6-eclipse-temurin-17'
     args '-v /var/run/docker.sock:/var/run/docker.sock'

    }
  }

  environment {
    SONAR_URL      = "http://98.92.53.164:9000"
    DOCKER_REGISTRY = "https://index.docker.io/v1/"
    DOCKER_REPO     = "harbey271/ultimate-cicd"
    GIT_USER_NAME   = "Harbey-tech"
    GIT_REPO_NAME   = "Jenkins-Zero-To-Hero"
  }

  stages {

    stage('Install Docker CLI') {
      steps {
        sh '''
          apt-get update
          apt-get install -y docker.io git
        '''
      }
    }

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn org.sonarsource.scanner.maven:sonar-maven-plugin:4.0.0.4121:sonar \
              -Dsonar.projectKey=spring-boot-app \
              -Dsonar.projectName=spring-boot-app \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "${DOCKER_REPO}:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh '''
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE} .
          '''

          docker.withRegistry("${DOCKER_REGISTRY}", "docker-cred") {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {

          sh '''
            set -xe
            rm -rf repo
            git clone https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git repo
            cd repo

            git config user.email "harbey2965@gmail.com"
            git config user.name "Harbey-tech"

            sed -i "s|replaceImageTag|${DOCKER_REPO}:${BUILD_NUMBER}|g" \
              java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add .
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes"
            git push origin main
          '''
        }
      }
    }

  } // stages
}
