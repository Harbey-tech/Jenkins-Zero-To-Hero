pipeline {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-17'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL = "http://35.173.48.132:9000"
        DOCKER_REGISTRY = "https://index.docker.io/v1/"
        DOCKER_REPO = "harbey271/ultimate-cicd"
        GIT_USER_NAME = "Harbey-tech"
        GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
    }

    stages {

        stage('Install Docker CLI') {
            steps {
                sh '''
                    set -xe
                    apt-get update
                    apt-get install -y docker.io curl git
                '''
            }
        }

        stage('Checkout') {
            steps {
                // Clean workspace first to avoid leftover files
                deleteDir()
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                sh 'ls -ltr'
                retry(3) { 
                    sh '''
                        set -xe
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        mvn clean package
                    '''
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        set -xe
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        mvn org.sonarsource.scanner.maven:sonar-maven-plugin:4.0.0.4121:sonar \
                            -Dsonar.projectKey=spring-boot-app \
                            -Dsonar.projectName=spring-boot-app \
                            -Dsonar.login=$SONAR_AUTH_TOKEN \
                            -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "${DOCKER_REPO}:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh '''
                        set -xe
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        docker build -t ${DOCKER_IMAGE} .
                    '''
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry("${DOCKER_REGISTRY}", "docker-cred") {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Update Deployment File') {
            agent any // run on Jenkins host
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        set -xe
                        # Remove old repo folder to avoid conflicts
                        rm -rf ${GIT_REPO_NAME}

                        # Clone fresh so .git exists
                        git clone https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git
                        cd ${GIT_REPO_NAME}

                        git config user.email "harbey2965@gmail.com"
                        git config user.name "Harbey-tech"

                        MANIFEST_PATH="java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml"
                        NEW_IMAGE_TAG="${DOCKER_REPO}:${BUILD_NUMBER}"
                        OLD_TAG_PLACEHOLDER="replaceImageTag"

                        # Update deployment manifest
                        sed -i "s|${OLD_TAG_PLACEHOLDER}|${NEW_IMAGE_TAG}|" $MANIFEST_PATH

                        git add $MANIFEST_PATH
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                        git push origin HEAD:main
                    '''
                }
            }
        }

    } // closes stages
} // closes pipeline
