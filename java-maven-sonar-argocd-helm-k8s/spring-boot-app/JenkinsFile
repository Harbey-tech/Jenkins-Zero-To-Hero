pipeline {
    agent {
        docker {
            image 'maven:3.9.4-eclipse-temurin-17' // official Maven + JDK image
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL = "https://sonarcloud.io"
        SONAR_ORG = "harbey-tech"          // SonarCloud organization key
        SONAR_PROJECT_KEY = "harbey-tech"  // SonarCloud project key
        DOCKER_IMAGE = "Harbey-tech/spring-boot-app:${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                // Checkout the full repo; your Jenkinsfile is inside a subfolder
                git branch: 'main',
                    url: 'https://github.com/Harbey-tech/Jenkins-Zero-To-Hero.git',
                    credentialsId: 'github'
            }
        }

        stage('Build and Test') {
            steps {
                // Navigate to the correct folder
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Static Code Analysis - SonarCloud') {
            steps {
                withCredentials([string(credentialsId: 'sonarcloud-token', variable: 'SONAR_AUTH_TOKEN')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        sh """
                        mvn sonar:sonar \
                          -Dsonar.login=$SONAR_AUTH_TOKEN \
                          -Dsonar.host.url=${SONAR_URL} \
                          -Dsonar.organization=${SONAR_ORG} \
                          -Dsonar.projectKey=${SONAR_PROJECT_KEY}
                        """
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                    script {
                        def dockerImage = docker.image("${DOCKER_IMAGE}")
                        docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                            dockerImage.push()
                        }
                    }
                }
            }
        }

        stage('Update Deployment File') {
            environment {
                GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
                GIT_USER_NAME = "Harbey-tech"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests') {
                        sh """
                        git config user.email "Harbey2965@gmail.com"
                        git config user.name "Harbey-tech"
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml
                        git add deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                        """
                    }
                }
            }
        }

    } // stages

    post {
        always {
            cleanWs()
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
        success {
            echo "Pipeline completed successfully!"
        }
    }
}
