pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'myapp:latest'
        REGISTRY_CREDENTIAL = 'dockerhub-credentials' // replace with your Docker registry credentials ID
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repo
                git branch: 'main', url: 'https://github.com/Harbey-tech/JENKINS-END-TO-END-CICD-PROJECT.git'
            }
        }

        stage('Build and Test') {
            steps {
                // Build the Spring Boot project with Maven
                sh 'mvn clean package'
            }
        }

        stage('Static Code Analysis - SonarCloud') {
            when {
                expression { return fileExists('pom.xml') }
            }
            steps {
                // Run SonarCloud analysis (optional, configure SONAR_TOKEN in Jenkins)
                withSonarQubeEnv('SonarCloud') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t ${DOCKER_IMAGE} ."

                    // Push Docker image
                    docker.withRegistry('', "${REGISTRY_CREDENTIAL}") {
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                // Example: update image in Kubernetes deployment YAML
                sh "sed -i 's|image: .*|image: ${DOCKER_IMAGE}|' deployment.yaml"
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                // Apply Kubernetes deployment
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs!'
        }
    }
}
