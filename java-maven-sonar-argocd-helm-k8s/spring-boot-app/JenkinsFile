pipeline {
    agent any

    environment {
        DOCKER_HUB_USERNAME = "harbey271"
        DOCKER_IMAGE_NAME = "spring-boot-app"
        DOCKER_IMAGE_TAG = "latest"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo 'üîÑ Checking out repository...'
                checkout scm
            }
        }

        stage('Diagnostics') {
            steps {
                echo 'ü©∫ Checking workspace details...'
                sh '''
                    echo "Current working directory:"
                    pwd
                    echo "Contents of workspace:"
                    ls -al
                    echo "Searching for pom.xml file:"
                    find . -name "pom.xml"
                '''
            }
        }

        stage('Build and Test') {
            steps {
                echo '‚öôÔ∏è Building and testing the project...'
                sh '''
                    # Navigate to folder containing pom.xml if needed
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn clean package
                '''
            }
        }

        stage('Static Code Analysis - SonarCloud') {
            steps {
                echo 'üîç Running SonarCloud analysis...'
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn sonar:sonar \
                        -Dsonar.projectKey=your_project_key \
                        -Dsonar.organization=your_org \
                        -Dsonar.host.url=https://sonarcloud.io \
                        -Dsonar.login=${SONAR_TOKEN}
                '''
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                echo 'üê≥ Building and pushing Docker image...'
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    docker build -t ${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} .
                    echo "${DOCKER_HUB_PASSWORD}" | docker login -u "${DOCKER_HUB_USERNAME}" --password-stdin
                    docker push ${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}
                '''
            }
        }

        stage('Update Deployment File') {
            steps {
                echo 'üìù Updating Kubernetes deployment YAML...'
                sh '''
                    # Example: update image tag in deployment.yaml
                    sed -i "s|image: .*|image: ${DOCKER_HUB_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}|g" k8s/deployment.yaml
                '''
            }
        }

    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs for details.'
        }
    }
}
